material {
    name : aiDefaultTrans,
    shadingModel : lit,
    blending : transparent,
    parameters : [
        {
            type : float4,
            name : baseColor
        },
        {
            type : float,
            name : metallic
        },
        {
            type : float,
            name : roughness
        }
    ],
}

fragment {
    void material(inout MaterialInputs material) {
        prepareMaterial(material);
        material.baseColor = baseColor;
        material.metallic = metallic;
        material.roughness = roughness;
    }
}
